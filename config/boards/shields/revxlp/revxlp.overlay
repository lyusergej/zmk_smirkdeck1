#include <dt-bindings/zmk/matrix_transform.h>



/ {
    chosen {
        zmk,kscan = &kscan;
        zmk,matrix_transform = &default_transform;
    };



    // Трансформация матрицы
    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <6>;
        rows = <7>;
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5) RC(1,5) RC(1,4) RC(1,3) RC(1,2) RC(1,1) RC(1,0)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5) RC(3,5) RC(3,4) RC(3,3) RC(3,2) RC(3,1) RC(3,0)
            RC(4,0) RC(4,1) RC(4,2) RC(4,3) RC(4,4) RC(4,5) RC(5,5) RC(5,4) RC(5,3) RC(5,2) RC(5,1) RC(5,0)
                    RC(6,0) RC(6,1) RC(6,2) RC(6,3) RC(6,4) RC(6,5)
        >;
    };

    // Скан матрицы
    kscan: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";
        diode-direction = "col2row";
        wakeup-source;

        col-gpios =
            <&gpio0 7 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>,
            <&gpio0 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>,
            <&gpio0 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>,
            <&gpio0 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>,
            <&gpio0 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>,
            <&gpio0 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        

        row-gpios =
            <&gpio0 0 0 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
            <&gpio0 0 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
            <&gpio0 0 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
            <&gpio0 0 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
            <&gpio0 0 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
            <&gpio0 0 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
            <&gpio0 0 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
        ;
    };
};